{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "0.1.0",
  "command": "npm",
  "isShellCommand": true,
  "showOutput": "always",
  "suppressTaskName": true,
  "tasks": [
    {
      "taskName": "lint",
      "args": ["grunt tslint"]
    },
    {
      "taskName": "compile",
      "args": ["tsc -w"]
    },
    {
      "taskName": "dev",
      "args": ["lint", "compile"]
    }
  ]
}
